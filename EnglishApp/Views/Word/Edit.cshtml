@model EnglishApp.Models.Word

@{
    ViewData["Title"] = "Edit Word";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit Word</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="WordID" />

                        <div class="form-group mb-3">
                            <label asp-for="EngWordName" class="control-label">English Word</label>
                            <input asp-for="EngWordName" class="form-control" />
                            <span asp-validation-for="EngWordName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TurWordName" class="control-label">Turkish Translation</label>
                            <input asp-for="TurWordName" class="form-control" />
                            <span asp-validation-for="TurWordName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label">Category</label>
                            <input asp-for="Category" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Picture</label>
                            @if (!string.IsNullOrEmpty(Model.PicturePath))
                            {
                                <div class="mb-2">
                                    <img src="@Model.PicturePath" class="img-thumbnail" style="max-height: 150px;" />
                                </div>
                            }
                            <input type="file" name="picture" class="form-control" accept="image/*" />
                            <small class="text-muted">If you upload a new picture, the current picture will be replaced.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Audio File</label>
                            @if (!string.IsNullOrEmpty(Model.AudioPath))
                            {
                                <div class="mb-2">
                                    <audio controls class="w-100">
                                        <source src="@Model.AudioPath" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            }
                            <input type="file" name="audio" class="form-control" accept="audio/*" />
                            <small class="text-muted">If you upload a new audio file, the current audio will be replaced.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Example Sentences</label>
                            <div id="samplesContainer">
                                @if (Model.WordSamples != null && Model.WordSamples.Any())
                                {
                                    foreach (var sample in Model.WordSamples)
                                    {
                                        <div class="input-group mb-2">
                                            <input type="text" name="samples[]" class="form-control" value="@sample.Sample" />
                                            <button type="button" class="btn btn-outline-danger remove-sample">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="input-group mb-2">
                                        <input type="text" name="samples[]" class="form-control" placeholder="Enter an example sentence" />
                                        <button type="button" class="btn btn-outline-danger remove-sample">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            <button type="button" class="btn btn-outline-primary" id="addSample">
                                <i class="fas fa-plus"></i> Add Another Example
                            </button>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#addSample").click(function () {
                var sampleHtml = `
                    <div class="input-group mb-2">
                        <input type="text" name="samples[]" class="form-control" placeholder="Enter an example sentence" />
                        <button type="button" class="btn btn-outline-danger remove-sample">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                `;
                $("#samplesContainer").append(sampleHtml);
            });

            $(document).on("click", ".remove-sample", function () {
                $(this).closest(".input-group").remove();
            });
        });
    </script>
}