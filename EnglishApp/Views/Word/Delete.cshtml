@model EnglishApp.Models.Word

@{
    ViewData["Title"] = "Delete Word";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Delete Word</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this word?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <h5>@Model.EngWordName</h5>
                        <p>@Model.TurWordName</p>

                        @if (!string.IsNullOrEmpty(Model.PicturePath))
                        {
                            <div class="mt-3">
                                <img src="@Model.PicturePath" alt="@Model.EngWordName" class="img-thumbnail" style="max-height: 200px;" />
                            </div>
                        }

                        @if (Model.WordSamples.Any())
                        {
                            <div class="mt-3">
                                <h6>Example Sentences:</h6>
                                <ul class="list-unstyled">
                                    @foreach (var sample in Model.WordSamples)
                                    {
                                        <li class="mb-2">@sample.Sample</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="WordID" />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 