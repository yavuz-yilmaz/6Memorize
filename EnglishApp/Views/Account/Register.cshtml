@model EnglishApp.Models.User

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="row g-0">
                    <div class="col-md-6 d-none d-md-block">
                        <div class="bg-success h-100 d-flex flex-column justify-content-center text-white p-5"
                             style="border-radius: 5px 0 0 5px; background-image: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <div class="text-center mb-4">
                                <i class="fas fa-user-plus fa-4x mb-3"></i>
                                <h3 class="fw-bold">Join Our Community</h3>
                            </div>
                            <p class="lead">Start your English learning journey today!</p>
                            <ul class="list-unstyled mt-4">
                                <li class="mb-3">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Create your personal vocabulary list
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Challenge yourself with quizzes
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Track your progress with visual analytics
                                </li>
                                <li>
                                    <i class="fas fa-check-circle me-2"></i>
                                    Master English word by word
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body p-5">
                            <h3 class="text-center fw-bold mb-4">Create Account</h3>

                            <form asp-action="Register" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UserName" class="form-control" id="UserName" placeholder="Username" />
                                    <label asp-for="UserName"><i class="fas fa-user me-2"></i>Username</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" type="email" id="Email" placeholder="Email" />
                                    <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control" type="password" id="Password" placeholder="Password" />
                                    <label asp-for="Password"><i class="fas fa-lock me-2"></i>Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">Password must be at least 8 characters long.</small>
                                </div>

                                <div class="d-grid gap-2 mt-4">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-user-plus me-2"></i>Register
                                    </button>
                                </div>
                            </form>
                            <div class="text-center mt-4">
                                <p class="text-muted">Already have an account? <a asp-action="Login" class="fw-bold">Login here</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}