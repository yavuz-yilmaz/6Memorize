@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="row g-0">
                    <div class="col-md-6 d-none d-md-block">
                        <div class="bg-warning h-100 d-flex flex-column justify-content-center text-white p-5"
                             style="border-radius: 5px 0 0 5px; background-image: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);">
                            <div class="text-center mb-4">
                                <i class="fas fa-key fa-4x mb-3"></i>
                                <h3 class="fw-bold">Password Recovery</h3>
                            </div>
                            <p class="lead">Don't worry, we're here to help you regain access to your account.</p>
                            <div class="mt-4">
                                <div class="mb-3 d-flex align-items-center">
                                    <div class="p-2 bg-white rounded-circle me-3"><i class="fas fa-envelope text-warning"></i></div>
                                    <span>Enter your email address</span>
                                </div>
                                <div class="mb-3 d-flex align-items-center">
                                    <div class="p-2 bg-white rounded-circle me-3"><i class="fas fa-check text-warning"></i></div>
                                    <span>Check your inbox for a reset link</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="p-2 bg-white rounded-circle me-3"><i class="fas fa-lock-open text-warning"></i></div>
                                    <span>Set your new password</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body p-5">
                            <h3 class="text-center fw-bold mb-4">Forgot Your Password?</h3>
                            <p class="text-center text-muted mb-4">Enter your email address and we'll send you a link to reset your password.</p>

                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-info alert-dismissible fade show">
                                    <i class="fas fa-info-circle me-2"></i>@TempData["Message"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form asp-action="ForgotPassword" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-floating mb-4">
                                    <input name="email" id="email" class="form-control" type="email" required placeholder="Email" />
                                    <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                                </div>

                                <div class="d-grid gap-2 mt-4">
                                    <button type="submit" class="btn btn-warning btn-lg text-white">
                                        <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                                    </button>
                                </div>
                            </form>
                            <div class="text-center mt-4">
                                <p><a asp-action="Login" class="text-muted"><i class="fas fa-angle-left me-1"></i>Back to Login</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}