@model EnglishApp.Models.AnalysisViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Learning Analysis Report</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 2px solid #3498db;
            position: relative;
        }

        .header:after {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 10px;
            background: #3498db;
            border-radius: 5px;
        }

        .header h1 {
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .header p {
            color: #7f8c8d;
            margin: 5px 0;
        }

        .stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

        .stat-box {
            text-align: center;
            background: #f8f9fa;
            padding: 20px;
            width: 28%;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            border-bottom: 5px solid transparent;
        }

        .stat-box:nth-child(1) {
            border-bottom-color: #3498db;
        }

        .stat-box:nth-child(2) {
            border-bottom-color: #2ecc71;
        }

        .stat-box:nth-child(3) {
            border-bottom-color: #f39c12;
        }

        .stat-box h3 {
            color: #7f8c8d;
            font-weight: normal;
            margin-bottom: 5px;
            font-size: 14px;
        }

        .stat-box h2 {
            color: #2c3e50;
            margin: 10px 0;
            font-size: 32px;
        }

        .section-title {
            margin-top: 30px;
            position: relative;
            padding-left: 15px;
            color: #2c3e50;
            border-left: 5px solid #3498db;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }

        th {
            background-color: #f8f9fa;
            color: #2c3e50;
            font-weight: 600;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover {
            background-color: #f8f9fa;
        }

        .progress-container {
            background-color: #e9ecef;
            border-radius: 10px;
            height: 15px;
            width: 100%;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            border-radius: 10px;
            transition: width 1s;
            position: relative;
        }

        .progress-text {
            position: absolute;
            right: 10px;
            color: white;
            font-size: 11px;
            top: -1px;
            text-shadow: 0 0 3px rgba(0, 0, 0, 0.5);
        }

        .progress-high {
            background-color: #2ecc71;
        }

        .progress-medium {
            background-color: #3498db;
        }

        .progress-low {
            background-color: #f39c12;
        }

        .progress-very-low {
            background-color: #e74c3c;
        }

        .category-name {
            background-color: #f8f9fa;
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 13px;
            border: 1px solid #dee2e6;
        }

        .footer {
            margin-top: 60px;
            text-align: center;
            font-size: 12px;
            color: #95a5a6;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
        }

        .report-summary {
            background-color: #f8f9fa;
            border-left: 5px solid #3498db;
            padding: 15px;
            margin: 30px 0;
            border-radius: 0 5px 5px 0;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Vocabulary Learning Analysis Report</h1>
        <p>User: @(Model.UserName ?? "Student")</p>
        <p>Generated on: @DateTime.Now.ToString("MMMM dd, yyyy") at @DateTime.Now.ToString("HH:mm")</p>
    </div>

    <div class="report-summary">
        <p>This report provides a comprehensive analysis of your vocabulary learning progress. It shows your mastery level across different categories and overall performance.</p>
    </div>

    <div class="stats">
        <div class="stat-box">
            <h3>Total Words</h3>
            <h2>@Model.TotalWords</h2>
            <p>Available in database</p>
        </div>
        <div class="stat-box">
            <h3>Mastered Words</h3>
            <h2>@Model.KnownWords</h2>
            <p>Completely learned</p>
        </div>
        <div class="stat-box">
            <h3>Success Rate</h3>
            <h2>@Model.OverallSuccessRate.ToString("F1")%</h2>
            <p>Overall mastery</p>
        </div>
    </div>

    <h3 class="section-title">Category Progress Analysis</h3>

    <table>
        <thead>
        <tr>
            <th>Category</th>
            <th>Total Words</th>
            <th>Mastered</th>
            <th>Success Rate</th>
            <th>Progress</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.CategoryProgress.OrderByDescending(c => c.SuccessRate))
        {
            var progressClass = "progress-very-low";
            if (category.SuccessRate >= 75) progressClass = "progress-high";
            else if (category.SuccessRate >= 50) progressClass = "progress-medium";
            else if (category.SuccessRate >= 25) progressClass = "progress-low";

            <tr>
                <td><div class="category-name">@(string.IsNullOrEmpty(category.Category) ? "General" : category.Category)</div></td>
                <td>@category.TotalWords</td>
                <td>@category.KnownWords</td>
                <td>@category.SuccessRate.ToString("F1")%</td>
                <td>
                    <div class="progress-container">
                        <div class="progress-bar @progressClass" style="width: @category.SuccessRate%;">
                            <span class="progress-text">@category.SuccessRate.ToString("F0")%</span>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="footer">
        <p>This report was generated by EnglishApp Learning System</p>
        <p>&copy; @DateTime.Now.Year - EnglishApp - All rights reserved</p>
    </div>
</div>

<script>
    window.onload = function() {
        setTimeout(function() {
            window.print();
        }, 1000);
    }
</script>
</body>
</html>