@{
    ViewData["Title"] = "Home";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #6c5ce7 0%, #3c40c6 100%);
        color: white;
        padding: 80px 0;
        border-radius: 15px;
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    }

    .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        transform: translate(150px, -150px);
    }

    .hero-section::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200px;
        height: 200px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        transform: translate(-100px, 100px);
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-image {
        position: relative;
        z-index: 1;
    }

    .hero-image img {
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        transform: rotate(2deg);
        transition: transform 0.5s ease;
    }

    .hero-image img:hover {
        transform: rotate(0deg) scale(1.02);
    }

    .feature-section {
        padding: 40px 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

    .section-header::after {
        content: "";
        display: block;
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, #6c5ce7, #3c40c6);
        margin: 15px auto;
        border-radius: 2px;
    }

    .feature-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.4s, box-shadow 0.4s;
        margin-bottom: 30px;
        height: 100%;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .feature-card .card-body {
        padding: 30px;
    }

    .feature-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-bottom: 25px;
        font-size: 28px;
        transition: transform 0.5s;
    }

    .feature-card:hover .feature-icon {
        transform: rotateY(180deg);
    }

    .feature-card.purple .feature-icon {
        background: linear-gradient(135deg, #6c5ce7 0%, #3c40c6 100%);
        color: white;
    }

    .feature-card.green .feature-icon {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        color: white;
    }

    .feature-card.orange .feature-icon {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
    }

    .feature-card .card-title {
        font-weight: 700;
        margin-bottom: 15px;
    }

    .stats-section {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 50px 0;
        margin: 40px 0;
    }

    .stat-counter {
        text-align: center;
        padding: 20px;
    }

    .stat-counter .counter {
        font-size: 42px;
        font-weight: 700;
        color: #3c40c6;
        margin-bottom: 10px;
    }

    .cta-section {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
        padding: 60px;
        border-radius: 15px;
        margin-top: 40px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .cta-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='rgba(255,255,255,0.1)' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.5;
    }

    .cta-content {
        position: relative;
        z-index: 1;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6c5ce7 0%, #3c40c6 100%);
        border: none;
        box-shadow: 0 5px 15px rgba(108,92,231,0.3);
    }

    .btn-light {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .btn-outline-light {
        border-width: 2px;
    }

    .btn-large {
        padding: 12px 24px;
        font-size: 18px;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-3">Master English Vocabulary The Smart Way</h1>
                    <p class="lead mb-4">Build your vocabulary systematically with our science-based spaced repetition learning system. Remember words forever, not just for tests.</p>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="mt-5">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-large me-3">
                                <i class="fas fa-user-plus me-2"></i> Get Started Free
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-large">
                                <i class="fas fa-sign-in-alt me-2"></i> Log In
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-5">
                            <a asp-controller="Quiz" asp-action="Index" class="btn btn-light btn-large me-3">
                                <i class="fas fa-tasks me-2"></i> Take Your Quiz
                            </a>
                            <a asp-controller="Word" asp-action="Wordle" class="btn btn-outline-light btn-large">
                                <i class="fas fa-gamepad me-2"></i> Play Wordle
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image">
                    <img src="/images/heroImage.webp" alt="English Learning" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Feature Section -->
<section class="feature-section">
    <div class="container">
        <div class="section-header">
            <h2>How Our App Helps You Learn</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card feature-card purple">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-brain"></i>
                        </div>
                        <h4 class="card-title">Smart Learning System</h4>
                        <p class="card-text">Our spaced repetition algorithm ensures you review words just before you're about to forget them, optimizing your memory retention.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card green">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <h4 class="card-title">Learn Through Play</h4>
                        <p class="card-text">Reinforce your vocabulary with our engaging Wordle game that uses words you've already learned for a fun practice experience.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card orange">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="card-title">Track Your Progress</h4>
                        <p class="card-text">See your vocabulary growth over time with detailed analytics and insights about your learning journey.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2 class="display-6 fw-bold mb-3">Ready to expand your vocabulary?</h2>
                    <p class="lead mb-0">Join thousands of learners who have improved their English skills with our app.</p>
                </div>
                <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-large">
                            <i class="fas fa-rocket me-2"></i> Start Learning Now
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Quiz" asp-action="Index" class="btn btn-light btn-large">
                            <i class="fas fa-tasks me-2"></i> Take Your Quiz
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
