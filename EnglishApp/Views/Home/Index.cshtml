@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-3">Master English Vocabulary The Smart Way</h1>
                    <p class="lead mb-4">Build your vocabulary systematically with our science-based spaced repetition learning system. Remember words forever, not just for tests.</p>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="mt-5">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-large me-3">
                                <i class="fas fa-user-plus me-2"></i> Get Started Free
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-large">
                                <i class="fas fa-sign-in-alt me-2"></i> Log In
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-5">
                            <a asp-controller="Quiz" asp-action="Index" class="btn btn-light btn-large me-3">
                                <i class="fas fa-tasks me-2"></i> Take Your Quiz
                            </a>
                            <a asp-controller="Word" asp-action="Wordle" class="btn btn-outline-light btn-large">
                                <i class="fas fa-gamepad me-2"></i> Play Wordle
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image">
                    <img src="/images/heroImage.webp" alt="English Learning" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Feature Section -->
<section class="feature-section">
    <div class="container">
        <div class="section-header">
            <h2>How Our App Helps You Learn</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card feature-card purple">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-brain"></i>
                        </div>
                        <h4 class="card-title">Smart Learning System</h4>
                        <p class="card-text">Our spaced repetition algorithm ensures you review words just before you're about to forget them, optimizing your memory retention.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card green">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <h4 class="card-title">Learn Through Play</h4>
                        <p class="card-text">Reinforce your vocabulary with our engaging Wordle game that uses words you've already learned for a fun practice experience.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card orange">
                    <div class="card-body text-center">
                        <div class="feature-icon mx-auto">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="card-title">Track Your Progress</h4>
                        <p class="card-text">See your vocabulary growth over time with detailed analytics and insights about your learning journey.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2 class="display-6 fw-bold mb-3">Ready to expand your vocabulary?</h2>
                    <p class="lead mb-0">Join thousands of learners who have improved their English skills with our app.</p>
                </div>
                <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-large">
                            <i class="fas fa-rocket me-2"></i> Start Learning Now
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Quiz" asp-action="Index" class="btn btn-light btn-large">
                            <i class="fas fa-tasks me-2"></i> Take Your Quiz
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
